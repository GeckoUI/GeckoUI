{
  "name": "@geckoui",
  "private": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "publish:dry": "pnpm -r publish --dry-run --access public --no-git-checks",
    "publish:alpha": "pnpm -r publish --access public --tag alpha",
    "publish:beta": "pnpm -r publish --access public --tag beta",
    "publish:latest": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
